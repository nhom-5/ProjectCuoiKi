<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/sosanh"
    android:weightSum="6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Hiện tại"
        android:textSize="25dp"
        android:textColor="#f000"
        android:textStyle="bold"
        android:id="@+id/now"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#f000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#f000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#f000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ngaynow"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#f000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bminow"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#f000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kqnow"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#f000"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Quá khứ"
        android:textSize="25dp"
        android:textColor="#f000"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#f000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#f000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#f000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ngaypast"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#f000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmipast"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#f000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kqpast"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#f000"/>
    </LinearLayout>

</LinearLayout>